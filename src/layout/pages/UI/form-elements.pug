        span.name-block__state.h3-regular Hover / Focus
      
      .text-field 
        input(type="Email" placeholder="This is pretty awesome").text-field__input

        //- Элемент dropdown

      .name-block
        span.name-block__name.h3 Dropdown

      .dropdown
